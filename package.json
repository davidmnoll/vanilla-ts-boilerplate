{
  "name": "vanilla-ts-boilerplate",
  "version": "1.0.0",
  "description": "Vanilla Typescript Starter Project",
  "main": "index.js",
  "scripts": {
    "build": "npx webpack",
    "dev": "npx webpack-dev-server",
    "test": "npx jest",
    "storybook": "npx cross-env NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6006",
    "test-playwright": "npx playwright test",
    "build-storybook": "build-storybook",
    "test-storybook": "npx test-storybook",
    "test-storybook:ci": "npx cross-env NODE_OPTIONS=--openssl-legacy-provider npx concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npx build-storybook --quiet && npx http-server storybook-static --port 6006 --silent\" \"npx wait-on -d 60 -i 1000 tcp:127.0.0.1:6006 && npx test-storybook\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-typescript": "^7.21.0",
    "@playwright/test": "^1.31.2",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack4": "^6.5.16",
    "@storybook/html": "^6.5.16",
    "@storybook/manager-webpack4": "^6.5.16",
    "@storybook/test-runner": "^0.9.4",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "babel-jest": "^29.5.0",
    "babel-loader": "^8.3.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "playwright": "^1.31.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "script-loader": "^0.7.2",
    "storybook": "^6.5.16",
    "storybook-css-modules": "^1.0.8",
    "style-loader": "^3.3.1",
